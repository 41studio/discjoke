default: &default
  adapter: postgresql
  encoding: unicode
  username: postgres
  password: postgres
  host: localhost
  pool: 5

development:
  <<: *default
  database: starter_development

test:
  <<: *default
  database: starter_test

production:
  adapter: postgresql
  encoding: unicode
  database: starter_production
  username: postgres
  password: <%= ENV['BOTTLE_DATABASE_PASSWORD'] %>
